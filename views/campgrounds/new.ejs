<% layout("layouts/boilerplate") %> 
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col">
            <div class="card shadow">
                <div class="card-body">
            <form action="/campgrounds" method="POST" class="validatedForm" enctype="multipart/form-data" novalidate >
                <div class="mb-3">
                    <label class="form-label" for="titleInput">Title </label>
                    <input class="form-control" type="text" id="titleInput" name="campground[title]" required></input>
                    <div class="valid-feedback">Looks Good!</div>
                     <div class="invalid-feedback">Please add a title.</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="locationInput">Location </label>
                    <input class="form-control" type="text" id="locationInput" name="campground[location]" required></input>
                    <div class="valid-feedback">Looks Good!</div>
                     <div class="invalid-feedback">Please add a location.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="descriptionInput">Description </label>
                    <textarea class="form-control" type="text" id="descriptionInput" name="campground[description]" required></textarea>
                    <div class="valid-feedback">Looks Good!</div>
                     <div class="invalid-feedback">Please add a description.</div>
                </div>

                <div class="mb-3">
                    <label for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">Looks Good!</div>
                         <div class="invalid-feedback">Please add a price.</div>
                    </div>
                </div>
               
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="image" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                </div>
    
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
    
            <a href="/campgrounds">All Campgrounds</a>
        </div>
        </div>
    </div>
    </div>